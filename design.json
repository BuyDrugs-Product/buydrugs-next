{
  "meta": {
    "name": "buy-drugs Dashboard â€” Design System",
    "version": "1.0.0",
    "source": "Visual analysis of provided screenshot",
    "intent": "Enable AI to reproduce this UI look-and-feel consistently across the app",
    "keywords": [
      "soft",
      "rounded",
      "airy",
      "card-based",
      "modern",
      "playful-professional"
    ]
  },
  "principles": {
    "voice": [
      "Friendly and approachable, never childish",
      "Confidence through clarity and whitespace",
      "Minimal chrome; content-first cards"
    ],
    "visualRhythm": [
      "Consistent rounded geometry and pill shapes",
      "Soft shadows for depth, no hard borders",
      "Micro-contrast on surfaces; high contrast on text and key actions"
    ],
    "interaction": [
      "Direct manipulation; obvious affordances",
      "Subtle motion with fast, crisp easings",
      "Hover reveals; focus is explicit and accessible"
    ]
  },
  "foundations": {
    "grid": {
      "type": "fluid",
      "columns": 12,
      "gutter": 24,
      "margin": {
        "mobile": 16,
        "tablet": 24,
        "desktop": 40
      },
      "breakpoints": {
        "xs": 0,
        "sm": 600,
        "md": 900,
        "lg": 1200,
        "xl": 1536
      },
      "notes": "Cards align to a soft 8px baseline; internal spacing uses the 4px scale."
    },
    "spacing": {
      "unit": 4,
      "scale": [0, 4, 8, 12, 16, 20, 24, 32, 40, 48, 56, 64],
      "aliases": {
        "cardPadding": 24,
        "cardGap": 24,
        "sectionGap": 32,
        "listItemY": 12,
        "chipX": 12,
        "chipY": 8,
        "hairline": 2
      }
    },
    "radii": {
      "xs": 8,
      "sm": 12,
      "md": 16,
      "lg": 20,
      "xl": 24,
      "pill": 9999,
      "aliases": {
        "card": 24,
        "chip": 20,
        "button": 12,
        "input": 12,
        "toggle": 9999
      }
    },
    "elevation": {
      "0": "none",
      "1": "0 2px 6px rgba(16,24,40,0.08)",
      "2": "0 6px 18px rgba(16,24,40,0.10)",
      "3": "0 10px 30px rgba(16,24,40,0.12)",
      "4": "0 20px 48px rgba(16,24,40,0.30)",
      "surfaces": {
        "card": "{foundations.elevation.3}",
        "floating": "{foundations.elevation.4}"
      },
      "overlay": "0 20px 48px rgba(16,24,40,0.30)"
    },
    "colors": {
      "palette": {
        "white": "#FFFFFF",
        "black": "#0B0F14",
        "lime-25": "#FAFDEA",
        "lime-50": "#F7FBE6",
        "lime-75": "#F4F9D6",
        "lime-100": "#F0F9C9",
        "lime-200": "#E6F48D",
        "lime-300": "#DFF36E",
        "violet-500": "#6B5CFF",
        "violet-600": "#5947FF",
        "violet-650": "#4E3DFF",
        "violet-700": "#4C3BE8",
        "green-500": "#12B76A",
        "green-600": "#039855",
        "green-25": "#EAF8F1",
        "red-500": "#F04438",
        "buy-drugs-500": "#F79009",
        "blue-500": "#2E90FA",
        "neutral-25": "#FCFCFD",
        "neutral-50": "#F8FAFC",
        "neutral-100": "#F2F4F7",
        "neutral-200": "#E4E7EC",
        "neutral-300": "#D0D5DD",
        "neutral-400": "#98A2B3",
        "neutral-500": "#667085",
        "neutral-600": "#475467",
        "neutral-700": "#344054",
        "neutral-800": "#1D2939",
        "neutral-900": "#101828"
      },
      "semantic": {
        "background": {
          "app": "{colors.palette.lime-50}",
          "appStrong": "{colors.palette.lime-100}",
          "surface": "{colors.palette.white}",
          "muted": "{colors.palette.neutral-50}",
          "overlay": "rgba(16,24,40,0.48)"
        },
        "text": {
          "primary": "{colors.palette.neutral-900}",
          "secondary": "{colors.palette.neutral-600}",
          "tertiary": "{colors.palette.neutral-500}",
          "inverse": "{colors.palette.white}",
          "brand": "{colors.palette.violet-600}",
          "success": "{colors.palette.green-600}",
          "danger": "{colors.palette.red-500}",
          "warning": "{colors.palette.buy-drugs-500}",
          "info": "{colors.palette.blue-500}"
        },
        "border": {
          "subtle": "{colors.palette.neutral-200}",
          "default": "{colors.palette.neutral-200}",
          "strong": "{colors.palette.neutral-300}",
          "focus": "{colors.palette.violet-600}"
        },
        "action": {
          "primary": "{colors.palette.violet-600}",
          "primaryHover": "{colors.palette.violet-700}",
          "primaryActive": "#3E2FD4",
          "onPrimary": "{colors.palette.white}",
          "secondary": "{colors.palette.neutral-100}",
          "secondaryHover": "{colors.palette.neutral-200}",
          "secondaryActive": "{colors.palette.neutral-300}",
          "onSecondary": "{colors.palette.neutral-900}",
          "outline": "rgba(89,71,255,0.12)",
          "outlineBorder": "rgba(89,71,255,0.45)",
          "ghostHover": "rgba(89,71,255,0.08)",
          "success": "{colors.palette.green-500}",
          "successHover": "{colors.palette.green-600}",
          "destructive": "{colors.palette.red-500}",
          "destructiveHover": "{colors.palette.red-600}",
          "destructiveActive": "#B42318",
          "onDestructive": "{colors.palette.white}",
          "warning": "{colors.palette.buy-drugs-500}",
          "info": "{colors.palette.blue-500}"
        },
        "dataViz": {
          "progress": "{colors.palette.violet-600}",
          "progressTrack": "{colors.palette.neutral-200}"
        },
        "status": {
          "brand": "{colors.palette.violet-600}",
          "success": "{colors.palette.green-600}",
          "warning": "{colors.palette.buy-drugs-500}",
          "danger": "{colors.palette.red-500}",
          "info": "{colors.palette.blue-500}",
          "neutral": "{colors.palette.neutral-400}"
        }
      }
    },
    "typography": {
      "fontFamilies": {
        "brand": ["Inter", "SF Pro Text", "Segoe UI", "Helvetica Neue", "Arial", "system-ui", "sans-serif"]
      },
      "weights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "sizes": {
        "xs": 12,
        "sm": 14,
        "md": 16,
        "lg": 18,
        "xl": 20,
        "2xl": 24,
        "3xl": 28
      },
      "lineHeights": {
        "tight": 1.2,
        "snug": 1.3,
        "normal": 1.5,
        "relaxed": 1.6
      },
      "roles": {
        "title-lg": { "size": "2xl", "weight": "semibold", "lh": "snug", "tracking": -0.2 },
        "title-md": { "size": "xl", "weight": "semibold", "lh": "snug", "tracking": -0.1 },
        "subtitle": { "size": "sm", "weight": "regular", "lh": "normal", "color": "{colors.semantic.text.secondary}" },
        "body": { "size": "md", "weight": "regular", "lh": "normal" },
        "body-sm": { "size": "sm", "weight": "regular", "lh": "normal" },
        "label": { "size": "sm", "weight": "medium", "lh": "snug" },
        "overline": { "size": "xs", "weight": "semibold", "lh": "tight", "case": "uppercase", "tracking": 0.6 }
      }
    },
    "iconography": {
      "style": "feather-esque",
      "strokeWidth": 1.5,
      "corner": "rounded",
      "size": {
        "sm": 16,
        "md": 20,
        "lg": 24
      }
    }
  },
  "motion": {
    "durations": {
      "instant": 90,
      "fast": 140,
      "normal": 220,
      "slow": 320
    },
    "easings": {
      "standard": "cubic-bezier(0.2, 0.8, 0.2, 1)",
      "emphasized": "cubic-bezier(0.2, 0.8, 0, 1)",
      "decelerate": "cubic-bezier(0, 0, 0.2, 1)",
      "accelerate": "cubic-bezier(0.4, 0, 1, 1)"
    },
    "patterns": {
      "elevationHover": { "shadow": "{foundations.elevation.2}", "scale": 1.01, "duration": "fast" },
      "press": { "scale": 0.98, "duration": "instant" },
      "toggle": { "translate": 20, "duration": "fast" }
    }
  },
  "states": {
    "focusRing": {
      "style": "outline",
      "width": 2,
      "color": "{foundations.colors.semantic.border.focus}",
      "offset": 2
    },
    "hover": { "background": "rgba(15,23,42,0.04)", "opacity": 1 },
    "active": { "background": "rgba(15,23,42,0.08)", "scale": 0.98 },
    "selected": {
      "background": "rgba(89,71,255,0.10)",
      "border": "1px solid {foundations.colors.semantic.border.focus}"
    },
    "disabled": { "opacity": 0.45, "cursor": "not-allowed" }
  },
  "modes": {
    "light": {
      "description": "Default buy-drugs Dashboard presentation"
    },
    "dark": {
      "foundations": {
        "colors": {
          "semantic": {
            "background": {
              "app": "#111827",
              "appStrong": "#1F2937",
              "surface": "#1F2937",
              "muted": "#0F172A",
              "overlay": "rgba(15,23,42,0.65)"
            },
            "text": {
              "primary": "#F9FAFB",
              "secondary": "rgba(241,245,249,0.72)",
              "tertiary": "rgba(241,245,249,0.56)"
            },
            "border": {
              "subtle": "rgba(148,163,184,0.24)",
              "default": "rgba(148,163,184,0.32)",
              "strong": "rgba(148,163,184,0.48)"
            }
          }
        }
      }
    },
    "highContrast": {
      "foundations": {
        "colors": {
          "semantic": {
            "background": {
              "app": "#FFFFFF",
              "surface": "#FFFFFF",
              "muted": "#F8FAFC"
            },
            "text": {
              "primary": "#000000",
              "secondary": "#1F2937",
              "inverse": "#FFFFFF"
            },
            "border": {
              "default": "#1F2937",
              "focus": "{foundations.colors.semantic.action.primary}"
            },
            "action": {
              "primary": "#000000",
              "onPrimary": "#FFFFFF"
            }
          }
        }
      }
    }
  },
  "components": {
    "Card": {
      "base": {
        "background": "{foundations.colors.semantic.background.surface}",
        "radius": "{foundations.radii.aliases.card}",
        "padding": "{foundations.spacing.aliases.cardPadding}",
        "shadow": "{foundations.elevation.surfaces.card}",
        "border": null
      },
      "variants": {
        "profile": {
          "header": { "layout": "avatar + name + role + menu", "gap": 16 },
          "tags": { "type": "Chip", "wrap": true, "gap": 8 }
        },
        "calendar": {
          "header": { "typography": "title-md", "align": "center" },
          "dayCell": { "radius": 12, "size": 40, "gap": 8, "hover": { "background": "{foundations.colors.palette.neutral-100}" } },
          "selected": { "background": "{foundations.colors.semantic.background.app}", "border": "1px solid {foundations.colors.palette.neutral-200}" }
        },
        "projectSummary": {
          "progressBadge": { "component": "ProgressRing", "size": 36, "thickness": 6 },
          "assignees": { "component": "AvatarGroup", "size": "sm" }
        },
        "milestone": {
          "layout": "text-left meta-right",
          "cta": { "component": "Button", "variant": "secondary" },
          "progress": { "component": "ProgressRing", "size": 40, "thickness": 6 }
        },
        "integrations": {
          "row": { "component": "ListItem", "trailing": "Toggle", "avatar": "brandIcon" }
        },
        "notifications": {
          "row": { "component": "NotificationItem" },
          "actions": { "primary": "Accept", "secondary": "Deny" }
        }
      }
    },
    "Avatar": {
      "sizes": {
        "xs": 20,
        "sm": 28,
        "md": 40,
        "lg": 56
      },
      "shape": "circle",
      "ring": { "width": 2, "color": "{foundations.colors.semantic.background.surface}" }
    },
    "AvatarGroup": {
      "overlap": -10,
      "maxVisible": 5,
      "counter": {
        "background": "{foundations.colors.palette.neutral-100}",
        "color": "{foundations.colors.semantic.text.secondary}",
        "border": "1px solid {foundations.colors.palette.neutral-200}"
      }
    },
    "Chip": {
      "base": {
        "radius": "{foundations.radii.aliases.chip}",
        "paddingX": "{foundations.spacing.aliases.chipX}",
        "paddingY": "{foundations.spacing.aliases.chipY}",
        "type": "pill",
        "shadow": "{foundations.elevation.1}"
      },
      "variants": {
        "neutral": {
          "background": "{foundations.colors.semantic.background.muted}",
          "border": "1px solid {foundations.colors.semantic.border.subtle}",
          "color": "{foundations.colors.semantic.text.secondary}"
        },
        "tag": {
          "background": "{foundations.colors.semantic.action.secondary}",
          "border": "1px solid {foundations.colors.semantic.border.subtle}",
          "color": "{foundations.colors.semantic.text.primary}"
        },
        "brand": {
          "background": "rgba(89,71,255,0.10)",
          "border": "1px solid rgba(89,71,255,0.24)",
          "color": "{foundations.colors.semantic.text.brand}"
        },
        "success": {
          "background": "rgba(18,183,106,0.12)",
          "border": "1px solid rgba(18,183,106,0.24)",
          "color": "{foundations.colors.semantic.text.success}"
        },
        "outline": {
          "background": "transparent",
          "border": "1px solid {foundations.colors.semantic.border.default}",
          "color": "{foundations.colors.semantic.text.secondary}"
        }
      }
    },
    "Button": {
      "sizes": {
        "xs": {
          "height": 32,
          "paddingX": 12,
          "radius": "{foundations.radii.aliases.button}",
          "iconOnly": 32
        },
        "sm": {
          "height": 36,
          "paddingX": 16,
          "radius": "{foundations.radii.aliases.button}",
          "iconOnly": 36
        },
        "md": {
          "height": 44,
          "paddingX": 20,
          "radius": "{foundations.radii.aliases.button}",
          "iconOnly": 44
        }
      },
      "variants": {
        "primary": {
          "background": "{foundations.colors.semantic.action.primary}",
          "text": "{foundations.colors.semantic.action.onPrimary}",
          "hoverBackground": "{foundations.colors.semantic.action.primaryHover}",
          "activeBackground": "{foundations.colors.semantic.action.primaryActive}",
          "shadow": "{foundations.elevation.2}"
        },
        "secondary": {
          "background": "{foundations.colors.semantic.action.secondary}",
          "text": "{foundations.colors.semantic.action.onSecondary}",
          "hoverBackground": "{foundations.colors.semantic.action.secondaryHover}",
          "activeBackground": "{foundations.colors.semantic.action.secondaryActive}",
          "border": "1px solid {foundations.colors.semantic.border.subtle}",
          "shadow": "{foundations.elevation.1}"
        },
        "outline": {
          "background": "transparent",
          "border": "1px solid {foundations.colors.semantic.action.outlineBorder}",
          "text": "{foundations.colors.semantic.text.brand}",
          "hoverBackground": "{foundations.colors.semantic.action.outline}",
          "activeBackground": "{states.active.background}"
        },
        "ghost": {
          "background": "transparent",
          "text": "{foundations.colors.semantic.text.primary}",
          "hoverBackground": "{foundations.colors.semantic.action.ghostHover}",
          "activeBackground": "{states.active.background}"
        },
        "destructive": {
          "background": "{foundations.colors.semantic.action.destructive}",
          "text": "{foundations.colors.semantic.action.onDestructive}",
          "hoverBackground": "{foundations.colors.semantic.action.destructiveHover}",
          "activeBackground": "{foundations.colors.semantic.action.destructiveActive}"
        },
        "success": {
          "background": "rgba(18,183,106,0.12)",
          "text": "{foundations.colors.semantic.text.success}",
          "radius": "{foundations.radii.pill}",
          "icon": "check",
          "hoverBackground": "rgba(18,183,106,0.18)",
          "activeBackground": "rgba(18,183,106,0.24)"
        }
      },
      "states": {
        "disabled": "{states.disabled}",
        "focus": "{states.focusRing}"
      }
    },
    "Toggle": {
      "track": {
        "width": 48,
        "height": 28,
        "radius": "{foundations.radii.aliases.toggle}",
        "off": { "background": "{foundations.colors.semantic.border.default}" },
        "on": { "background": "{foundations.colors.semantic.action.primary}" },
        "disabledOpacity": 0.4
      },
      "thumb": {
        "size": 22,
        "background": "{foundations.colors.semantic.background.surface}",
        "shadow": "{foundations.elevation.1}"
      },
      "motion": "toggle"
    },
    "TextField": {
      "base": {
        "height": 48,
        "paddingX": 16,
        "paddingY": 12,
        "radius": "{foundations.radii.aliases.input}",
        "background": "{foundations.colors.semantic.background.surface}",
        "border": "1px solid {foundations.colors.semantic.border.default}",
        "text": "{foundations.colors.semantic.text.primary}",
        "placeholder": "{foundations.colors.semantic.text.tertiary}",
        "shadow": "none"
      },
      "affordances": {
        "leadingIcon": { "paddingLeft": 44 },
        "trailingIcon": { "paddingRight": 44 }
      },
      "helperText": {
        "typography": "body-sm",
        "color": "{foundations.colors.semantic.text.secondary}"
      },
      "states": {
        "focus": {
          "border": "1px solid {foundations.colors.semantic.border.focus}",
          "shadow": "0 0 0 4px rgba(89,71,255,0.18)"
        },
        "success": {
          "border": "1px solid rgba(18,183,106,0.40)",
          "shadow": "0 0 0 4px rgba(18,183,106,0.18)"
        },
        "error": {
          "border": "1px solid {foundations.colors.semantic.action.destructive}",
          "shadow": "0 0 0 4px rgba(240,68,56,0.18)",
          "helperTextColor": "{foundations.colors.semantic.text.danger}"
        },
        "disabled": {
          "background": "{foundations.colors.semantic.background.muted}",
          "border": "1px solid {foundations.colors.semantic.border.subtle}",
          "text": "rgba(16,24,40,0.45)"
        }
      }
    },
    "TextArea": {
      "base": {
        "paddingX": 16,
        "paddingY": 12,
        "radius": "{foundations.radii.aliases.input}",
        "background": "{foundations.colors.semantic.background.surface}",
        "border": "1px solid {foundations.colors.semantic.border.default}",
        "placeholder": "{foundations.colors.semantic.text.tertiary}"
      },
      "minRows": 3,
      "states": "{components.TextField.states}"
    },
    "SelectField": {
      "base": {
        "height": 48,
        "paddingX": 16,
        "radius": "{foundations.radii.aliases.input}",
        "background": "{foundations.colors.semantic.background.surface}",
        "border": "1px solid {foundations.colors.semantic.border.default}",
        "chevron": { "size": 16, "color": "{foundations.colors.semantic.text.tertiary}" }
      },
      "states": "{components.TextField.states}"
    },
    "Checkbox": {
      "box": {
        "size": 20,
        "radius": 8,
        "border": "1px solid {foundations.colors.semantic.border.default}",
        "background": "{foundations.colors.semantic.background.surface}",
        "checkedBackground": "{foundations.colors.semantic.action.primary}",
        "checkmark": { "icon": "check", "color": "{foundations.colors.semantic.action.onPrimary}" }
      },
      "label": { "typography": "label" },
      "description": { "typography": "body-sm", "color": "{foundations.colors.semantic.text.secondary}" },
      "states": {
        "hover": "{states.hover}",
        "focus": "{states.focusRing}",
        "disabled": "{states.disabled}",
        "error": { "border": "1px solid {foundations.colors.semantic.action.destructive}" }
      }
    },
    "RadioGroup": {
      "radio": {
        "size": 20,
        "border": "1px solid {foundations.colors.semantic.border.default}",
        "background": "{foundations.colors.semantic.background.surface}",
        "indicator": { "size": 10, "background": "{foundations.colors.semantic.action.primary}" }
      },
      "spacing": 12,
      "label": { "typography": "label" },
      "description": { "typography": "body-sm", "color": "{foundations.colors.semantic.text.secondary}" },
      "states": {
        "hover": "{states.hover}",
        "focus": "{states.focusRing}",
        "disabled": "{states.disabled}"
      }
    },
    "SegmentedControl": {
      "container": {
        "background": "{foundations.colors.semantic.background.muted}",
        "radius": "{foundations.radii.aliases.chip}",
        "padding": 4,
        "gap": 4,
        "shadow": "{foundations.elevation.1}"
      },
      "segment": {
        "radius": "{foundations.radii.aliases.chip}",
        "paddingX": 16,
        "height": 36,
        "typography": "label",
        "selected": {
          "background": "{foundations.colors.semantic.background.surface}",
          "text": "{foundations.colors.semantic.text.brand}",
          "shadow": "{foundations.elevation.1}"
        },
        "unselected": {
          "text": "{foundations.colors.semantic.text.secondary}"
        }
      }
    },
    "ListItem": {
      "layout": "leading + content + trailing",
      "paddingY": "{foundations.spacing.aliases.listItemY}",
      "gap": 12,
      "title": { "typography": "label" },
      "subtitle": { "typography": "body-sm", "color": "{foundations.colors.semantic.text.secondary}" },
      "trailing": { "align": "right" },
      "divider": { "color": "{foundations.colors.palette.neutral-200}" }
    },
    "NotificationItem": {
      "leading": { "component": "Avatar", "size": "sm" },
      "content": {
        "primary": { "typography": "label" },
        "secondary": { "typography": "body-sm", "color": "{foundations.colors.semantic.text.tertiary}" }
      },
      "actions": {
        "accept": { "component": "Button", "variant": "successPill", "icon": "check" },
        "deny": { "component": "Button", "variant": "ghost", "icon": "close" }
      },
      "meta": { "time": true, "menu": "kebab" }
    },
    "ProgressRing": {
      "size": 48,
      "thickness": 6,
      "trackColor": "{foundations.colors.semantic.dataViz.progressTrack}",
      "indicatorColor": "{foundations.colors.semantic.dataViz.progress}",
      "statuses": {
        "brand": "{foundations.colors.semantic.status.brand}",
        "success": "{foundations.colors.semantic.status.success}",
        "warning": "{foundations.colors.semantic.status.warning}",
        "danger": "{foundations.colors.semantic.status.danger}",
        "info": "{foundations.colors.semantic.status.info}"
      },
      "cap": "round",
      "label": { "typography": "label", "position": "inside" }
    },
    "MenuKebab": {
      "dots": 3,
      "size": 24,
      "container": { "radius": 12, "hover": { "background": "{foundations.colors.palette.neutral-100}" } }
    },
    "Calendar": {
      "header": {
        "monthTypography": "title-md",
        "navButtons": { "variant": "ghost", "iconOnly": true }
      },
      "weekday": { "typography": "overline", "color": "{foundations.colors.semantic.text.tertiary}" },
      "day": {
        "size": 40,
        "radius": 12,
